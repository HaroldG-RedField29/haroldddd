<div class="row">
    <div class="col-md-4">
        <div class="car">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Titulo de la cancion">
                    </div>
                     <div class="form-group">
                        <input type="text" name="description" class="form-control" placeholder="Autor">
                    </div>
                     <div class="form-group">
                        <input type="text" name="album" class="form-control" placeholder="Nombre del album">
                    </div>

                     <div class="form-group">
                        <input type="text" name="des" class="form-control" placeholder="Descripcion">
                    </div>

                     <div class="form-group">
                        <input type="text" name="genero" class="form-control" placeholder="Genero">
                    </div>




                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Buscar Imagen</label>
                        </div>    
                    </div>

                    <button class="btn btn-primary">Subir Imagen</button>

                    
                 </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Nombre del Album</th>
                    <th>Descripcion</th>
                    <th>Genero</th
                    
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{album}}</td>
                    <td>{{des}}</td>
                    <td>{{genero}}</td>
                    
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">View</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</div>

